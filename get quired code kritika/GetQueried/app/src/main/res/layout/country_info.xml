<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/find_people_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:weightSum="10"
android:maxHeight="?android:attr/listPreferredItemHeight"
android:minHeight="?android:attr/listPreferredItemHeight"
android:orientation="horizontal"
android:padding="@dimen/activity_horizontal_margin">

<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profilepic"
    android:layout_width="10dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_weight="2"
    android:src="@drawable/profile_placeholder_icon"
    app:civ_border_width="0dp" />

<TextView
    android:id="@+id/code"
    android:layout_width="50dp"
    android:layout_height="70dp"
    android:layout_weight="8.5"
    android:text="Medium TextMedium Text"
    android:textAppearance="?android:attr/textAppearanceMedium" />


 <CheckBox
        android:id="@+id/checkBox1"
        android:button="@drawable/customheckmarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:checked="false"
        android:paddingLeft="10dip"
        />

</LinearLayout>

